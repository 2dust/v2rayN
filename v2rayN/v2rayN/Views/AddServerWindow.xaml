                    Grid.Row="3"
                    Grid.Column="2"
                    Margin="{StaticResource ServerItemMargin}"
                    VerticalAlignment="Center"
                    Style="{StaticResource ToolbarTextBlock}"
                    Text="{x:Static resx:ResUI.TbRequestHost}" />

                <TextBlock
