                    Grid.Row="1"
                    Grid.Column="1"
                    Width="400"
                    Margin="{StaticResource ServerItemMargin}"
                    Style="{StaticResource DefTextBox}" />

                <TextBlock
                    Grid.Row="2"
                    Grid.Column="0"
                    Margin="{StaticResource ServerItemMargin}"
