                <TextBlock
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="{StaticResource ServerItemMargin}"
                    VerticalAlignment="Center"
                    Style="{StaticResource ToolbarTextBlock}"
                    Text="{x:Static resx:ResUI.TbRemarks}" />
